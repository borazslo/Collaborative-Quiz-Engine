{%  extends 'html.twig' %}

{% block container %}
  <div class="jumbotron text-center ">
        {{ quiz.title }}
		<h1 class="jumbotron-heading">{{ supergroup.name }}</h1>
		
		<strong>| {{ supergroup.option1 }} | {{ supergroup.option2 }} | {{ supergroup.option3 }} |</strong>
  </div>
	<div class="row justify-content-center">
        <div class="col">
		
		{% for group in groups %}
		<h2>{{ group.0.group }} (Level: {{ group.0.level }})</h2>
		<table class="table">
		  <thead>
			<tr>
			  <th scope="col">#</th>
			  <th scope="col">{{ "Name"|t }}</th>
			  <th scope="col">{{ "Id"|t }}</th>
			  <th scope="col">{{ "Password"|t }}</th>
			</tr>
		  </thead>
		  <tbody>
			{% for user in group %}
			<tr>
			  <th scope="row">{{ loop.index	}}</th>
			  <td>{{ user.user }}</td>
			  <td>{{ user.email }}</td>
			  <td>{{ user.pwd }}</td>
			</tr>
			{% endfor %}
			
		  </tbody>
		</table>
		{% endfor %}
		
		
		
		</div></div>
	</div>
    <div class="row justify-content-center">
        <div class="col-lg-4 col">

        <form class="form-signin" action="{{ base_url }}" method="post">                
            <input type="text" id="institution" name="code" class="form-control" placeholder="{{ 'GroupOfGroups: Code'|t }}" required>                                                                                            
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="task" value="GroupOfGroups_Enter" style="margin-top:10px">{{ "Login"|t }}</button>   

        </form>


        </div>

     </div>
    

{% endblock %}





